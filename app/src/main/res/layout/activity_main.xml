<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game"
    tools:context=".MainActivity">

 <TextView
        android:id="@+id/tvlevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tvoperator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvoperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

   <Button
       android:id="@+id/btnA"
       android:background="@drawable/button1"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_marginVertical="25dp"
       android:onClick="variantClick"
       android:text="1"
       android:textColor="#000000"
       android:textSize="32sp"
       app:layout_constraintBottom_toTopOf="@id/btnB"
       app:layout_constraintEnd_toEndOf="@id/btnD"
       app:layout_constraintStart_toStartOf="@id/btnD" />

   <Button
       android:id="@+id/btnB"
       android:layout_width="0dp"
       android:background="@drawable/button2"
       android:layout_height="wrap_content"
       android:layout_marginBottom="25dp"
       android:onClick="variantClick"
       android:text="2"
       android:textColor="#000000"
       android:textSize="32sp"
       app:layout_constraintBottom_toTopOf="@id/btnC"
       app:layout_constraintEnd_toEndOf="@id/btnD"
       app:layout_constraintStart_toStartOf="@id/btnD" />

    <Button
        android:id="@+id/btnC"
        android:layout_width="0dp"
        android:background="@drawable/button3"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:onClick="variantClick"
        android:text="3"
        android:textColor="#000000"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/btnD"
        app:layout_constraintEnd_toEndOf="@id/btnD"
        app:layout_constraintStart_toStartOf="@id/btnD" />

    <Button
        android:id="@+id/btnD"
        android:background="@drawable/button4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="25dp"
        android:onClick="variantClick"
        android:text="4"
        android:textColor="#000000"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>